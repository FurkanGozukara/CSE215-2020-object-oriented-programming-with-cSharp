        <Button Content="save" Name="btnSaveNewValueofListBox" HorizontalAlignment="Left" Margin="667,210,0,0" VerticalAlignment="Top" Width="109" Click="btnSaveNewValueofListBox_Click"/>
        <Button Name="btnOpenSecondWindow" Content="open second window" HorizontalAlignment="Left" Margin="620,24,0,0" VerticalAlignment="Top" Height="60" Width="156" Click="btnOpenSecondWindow_Click"/>


    </Grid>
</Window>
