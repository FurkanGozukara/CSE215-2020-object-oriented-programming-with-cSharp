<Window x:Class="Lecture_3___Part_2___WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lecture_3___Part_2___WPF"
        mc:Ignorable="d"
        Title="lecture 3" Height="600" Width="800">
    <Grid>
        <TextBox Name="txt1" HorizontalAlignment="Left" Margin="10,41,0,0" Text="first input" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txt2" HorizontalAlignment="Left" Margin="180,41,0,0" Text="second input" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Name="btnJoinStrings" Content="join strings and show" HorizontalAlignment="Left" Margin="341,39,0,0" VerticalAlignment="Top" Width="188" Click="btnJoinStrings_Click"/>
        <TextBox x:Name="txtSplitBox" HorizontalAlignment="Left" Margin="10,85,0,0" Text="type split text" TextWrapping="Wrap" VerticalAlignment="Top" Width="196" Height="128"/>
        <TextBox x:Name="txtSplitParameter" HorizontalAlignment="Left" Margin="230,85,0,0" Text="split seperator" TextWrapping="Wrap" VerticalAlignment="Top" Width="94" Height="64"/>
        <ListBox Name="lstSplitResults" Height="200" Margin="10,241,42,143" SelectionChanged="lstSplitResults_SelectionChanged"/>
